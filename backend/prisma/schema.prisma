generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Tarea {
  id          Int      @id @default(autoincrement())
  descripcion String
  fechaLimite DateTime
  estado      String   @default("pendiente")
  createdAt   DateTime @default(now())
}

enum EstadoTarea {
  PENDIENTE
  EN_PROCESO
  COMPLETADO
}