generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Tarea {
  id          Int      @id @default(autoincrement())
  descripcion String
  fechaLimite DateTime
  estado      EstadoTarea @default(PENDIENTE)
  createdAt   DateTime @default(now())
}

enum EstadoTarea {
  PENDIENTE
  EN_PROCESO
  COMPLETADO
}
